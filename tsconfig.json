{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "esnext",
    "module": "es2015",
    "lib": ["es2019", "dom", "dom.iterable", "es2019.array"],
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@": ["src/*"],
      "@js/*": ["src/assets/js/*"],
      "@styles/*": ["src/assets/scss/*"],
      "@images/*": ["src/assets/images/*"],
      "@fonts/*": ["src/assets/fonts/*"]
    },
  },
  "include": ["src/**/*.ts", "./declarations.d.ts", "src/assets/js/SlotOptions.tsx"],
  "exclude": [],
}
